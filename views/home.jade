doctype html
html
  head
    title= title
    script(type='text/javascript' src='/javascripts/loadAllForums.js')
    script(type='module' src='/javascripts/socialHub.js')
    link(rel='stylesheet', href='/stylesheets/default.css')
  body
    block content
    //nav bar
    div(class='navbar')
      a(href="../login") 
        img(src= logo, class= "logo")
      div(class='navbar-userinfo')
        p(class='text background')= 'Welcome'
        div(class='form-group')
          img(src=settingsIcon, class= "settings-icon")
          a(href='/home/settings', class= "settings-link")
            img(src=logoutIcon, class= "logout-icon")
            p(class='text')= username
    
    //content
    p(class='title')= page
    div(class='forums-div', id='forums')

      